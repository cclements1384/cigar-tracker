@page "/cigar-log"
@rendermode InteractiveServer
@using cigar_tracker.Models
@using cigar_tracker.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@attribute [Authorize]

@inject CigarService CigarService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Cigar Log</PageTitle>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>ðŸ”¥ Cigar Log</h1>
        <div>
            <span class="me-3">Welcome, @userEmail</span>
            <button class="btn btn-sm btn-outline-danger" @onclick="HandleLogout">Logout</button>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5>Log a New Cigar</h5>
        </div>
        <div class="card-body">
            <form @onsubmit="AddCigar">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="brand" class="form-label">Brand</label>
                        <input type="text" class="form-control" id="brand" 
                               @bind="newCigar.Brand" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="size" class="form-label">Size (e.g., Robusto, Churchill)</label>
                        <input type="text" class="form-control" id="size" 
                               @bind="newCigar.Size" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="datesmoked" class="form-label">Date Smoked</label>
                        <input type="date" class="form-control" id="datesmoked" 
                               @bind="dateSmokedValue" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="rating" class="form-label">Rating (1-10)</label>
                        <input type="number" class="form-control" id="rating" 
                               @bind="newCigar.Rating" min="1" max="10" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="notes" class="form-label">Notes</label>
                    <textarea class="form-control" id="notes" rows="3" 
                              @bind="newCigar.Notes" placeholder="Any thoughts, flavors, or experiences..."></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image (Optional)</label>
                    <InputFile class="form-control" id="image" 
                               accept="image/*" OnChange="OnImageSelected" />
                    @if (selectedFileName != null)
                    {
                        <small class="text-muted d-block mt-2">Selected: @selectedFileName (@FormatFileSize(imageFileSize))</small>
                    }
                    @if (imagePreview != null)
                    {
                        <div class="mt-2">
                            <img src="@imagePreview" class="img-thumbnail" style="max-width: 200px;" alt="Preview" />
                        </div>
                    }
                </div>

                <button type="submit" class="btn btn-primary" disabled="@isUploading">
                    @if (isUploading)
                    {
                        <span>
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            Uploading...
                        </span>
                    }
                    else
                    {
                        <span>Log Cigar</span>
                    }
                </button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Smoked Cigars</h5>
        </div>
        <div class="card-body">
            @if (cigars.Count == 0)
            {
                <p class="text-muted">No cigars logged yet. Light one up and add it to the log!</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Date</th>
                                <th>Brand</th>
                                <th>Size</th>
                                <th>Rating</th>
                                <th>Notes</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cigar in cigars)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(cigar.ImageUrl))
                                        {
                                            <img src="@cigar.ImageUrl" class="img-thumbnail" style="max-width: 80px; cursor: pointer;" 
                                                 @onclick="() => OpenImageModal(cigar.ImageUrl)" alt="Cigar image" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">No image</span>
                                        }
                                    </td>
                                    <td>@cigar.DateSmoked.ToString("MMM dd, yyyy")</td>
                                    <td><strong>@cigar.Brand</strong></td>
                                    <td>@cigar.Size</td>
                                    <td>
                                        <span class="badge @GetRatingBadgeClass(cigar.Rating)">
                                            @cigar.Rating/10
                                        </span>
                                    </td>
                                    <td>@cigar.Notes</td>
                                    <td>
                                        <button class="btn btn-sm btn-danger" 
                                                @onclick="() => DeleteCigar(cigar.Id)">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cigar Image</h5>
                <button type="button" class="btn-close" @onclick="CloseImageModal"></button>
            </div>
            <div class="modal-body text-center">
                @if (modalImageUrl != null)
                {
                    <img src="@modalImageUrl" class="img-fluid" alt="Cigar image" />
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<Cigar> cigars = new();
    private Cigar newCigar = new();
    private DateTime dateSmokedValue = DateTime.Today;
    private string userEmail = "User";
    private IBrowserFile? selectedFile;
    private string? selectedFileName;
    private long imageFileSize;
    private string? imagePreview;
    private bool isUploading = false;
    private string? modalImageUrl;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user?.Identity?.IsAuthenticated ?? false)
        {
            userEmail = user.FindFirst("email")?.Value ?? user.FindFirst("name")?.Value ?? "User";
        }

        await LoadCigarsAsync();
    }

    private async Task LoadCigarsAsync()
    {
        cigars = await CigarService.GetCigarsByUserAsync(userEmail);
    }

    private async Task AddCigar()
    {
        if (string.IsNullOrWhiteSpace(newCigar.Brand) || string.IsNullOrWhiteSpace(newCigar.Size))
        {
            return;
        }

        isUploading = true;
        try
        {
            newCigar.DateSmoked = dateSmokedValue;
            newCigar.LoggedInUser = userEmail;

            // Handle image upload if file is selected
            if (selectedFile != null)
            {
                using var stream = selectedFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024); // 5 MB max
                await CigarService.AddCigarWithImageAsync(newCigar, stream, selectedFile.Name, userEmail);
            }
            else
            {
                await CigarService.AddCigarAsync(newCigar);
            }

            // Reset form
            newCigar = new();
            dateSmokedValue = DateTime.Today;
            selectedFile = null;
            selectedFileName = null;
            imagePreview = null;
            imageFileSize = 0;
            await LoadCigarsAsync();
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task OnImageSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        selectedFileName = e.File.Name;
        imageFileSize = e.File.Size;

        // Create preview
        try
        {
            // Validate file size (5 MB max)
            if (e.File.Size > 5 * 1024 * 1024)
            {
                await JS.InvokeVoidAsync("alert", "Image size must be less than 5 MB");
                ClearImage();
                return;
            }

            using var stream = e.File.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            byte[] imageBytes = memoryStream.ToArray();
            imagePreview = $"data:{e.File.ContentType};base64,{Convert.ToBase64String(imageBytes)}";
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error loading image: {ex.Message}");
            ClearImage();
        }
    }

    private void ClearImage()
    {
        selectedFile = null;
        selectedFileName = null;
        imagePreview = null;
        imageFileSize = 0;
    }

    private async Task DeleteCigar(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this cigar entry?");
        if (confirmed)
        {
            await CigarService.DeleteCigarWithImageAsync(id);
            await LoadCigarsAsync();
        }
    }

    private void OpenImageModal(string imageUrl)
    {
        modalImageUrl = imageUrl;
        // Show modal using Bootstrap (you can also use Blazor's JS interop)
        JS.InvokeVoidAsync("bootstrapInterop.showModal", "imageModal");
    }

    private void CloseImageModal()
    {
        modalImageUrl = null;
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:F1} {sizes[order]}";
    }

    private string GetRatingBadgeClass(int rating)
    {
        return rating switch
        {
            >= 9 => "bg-success",
            >= 7 => "bg-info",
            >= 5 => "bg-warning",
            _ => "bg-danger"
        };
    }

    private async Task HandleLogout()
    {
        using (var client = new HttpClient())
        {
            await client.PostAsync(Navigation.Uri.Split("/cigar-log")[0] + "/logout", null);
        }
        Navigation.NavigateTo("/", forceLoad: true);
    }
}
